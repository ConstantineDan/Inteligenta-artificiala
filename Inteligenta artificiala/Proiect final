import tkinter as tk

root = tk.Tk()
root.title("Statiuni turistice din Romania")
root.geometry("700x300")

destinations_label = tk.Label(root, text="Statiunea:")
destinations_label.pack()

destinations_listbox = tk.Listbox(root)
destinations_listbox.pack()

description_label = tk.Label(root, text="")
description_label.pack()

destinations = {
    "Lacul Sarat": {
        "description": """Statiune balneoclimaterica permanenta, situata la 5 km de Braila, in Campia Baraganului, 
        la o altitudine de 25 m. Pe fundul lacului se afla namol terapeutic cu grad mare de mineralizare, unul dintre 
        cele mai importante namoluri sapropelice din tara noastra. Statiunea Lacul Sarat dispune de instalatii pentru 
        bai si impachetari calde cu namol, hidroterapie si electroterapie, aerosoli, cultura fizica medicala si bai reci cu namol.""",
        
    },
    "Lipova ": {
        "description": """Statiune balneoclimaterica, situata la 35 km de Arad, in Lunca Muresului, la o altitudine de 138 m. 
        Pentru tratament, statiunea dispune de instalatii pentru bai calde cu apa minerala, hidroterapie si electroterapie, 
        solarii pentru aerohelioterapie.""",
        
    },
    "Malnas Bai": {
        "description": """Statiune balneoclimaterica, situata pe Valea Oltului, in aval de defileul de la Tusnad, la o 
        altitudine de 565 metrii. Statiunea Malnas a devenit cunoscuta pentru izvoarele de apa minerala si emanatiile de 
        gaze mofetice, fiind vizitata de multi turisti ce urmeaza cure de tratament aici.""",
        
    },
     "Moneasa ": {
        "description": """Statiune balneoclimaterica, situata la 18 km de Sebis, la poalele muntilor Codru Moma, la o 
        altitudine de 280 m, cu ape minerale renumite. Aparatura de tratament a statiunii cuprinde instalatii pentru 
        bai calde cu apa minerala, fizioterapie, electroterapie, impachetari cu parafina, aerohelioterapie.""",
        
    },
      "Ocna Mures": {
        "description": """Statiune balneoclimaterica dispusa pe partea stanga a Muresului, la o altitudine de 258 m, 
        ce dispune de lacuri saline si instalatii pentru aeroterapie, helioterapie, electroterapie si bai calde cu 
        apa minerala sarata. Statiunea Ocna Mures este una dintre cele mai importante destinatii turistice din Transilvania.""",
        
    },
       "Ocna Sibiului": {
        "description": """Statiune balneoclimaterica permanenta, aflata la 14 km de Sibiu, in Depresiunea Sibiului la 
        o altitudine de 410 m. Pentru tratarea diverselor afectiuni, la Ocna Sibiului se gasesc apele sarate ale lacurilor 
        din imprejurimi, namolul sapropelic si apa minerala a izvorului Horea.""",
        
    },
        "Ocna Sugatag": {
        "description": """Statiune balneoclimaterica dispusa la 20 km de Sighetul Marmatiei, la poalele lantului vulcanic 
        Gutai-Tibles, la o altitudine de 490 metrii. Statiunea permanenta este parte componenta a comunei Ocna Sugatag 
        alcatuita din 4 sate cu o popula≈£ie de aproximativ 4500 locuitori.""",
        
    },
}

for destination in destinations:
    destinations_listbox.insert(tk.END, destination)

def update_description(*args):
    destination = destinations_listbox.get(destinations_listbox.curselection())
    description_label.config(text=destinations[destination]['description'])

destinations_listbox.bind("<<ListboxSelect>>", update_description)

root.mainloop()
